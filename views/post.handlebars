<p>Test</p>
<div>
    <p>{{posts.title}} Created on {{posts.createdAt}} by {{posts.User.name}}</p>
    <p>{{posts.contents}}</p>
</div>
<div>
    <div>
        <p>Comments:</p>
        {{#each posts.Comments as |comment|}}
        <p>{{comment.User.name}} commented:</p>
        <p>{{comment.contents}}</p>
        {{/each}}
    </div>
    {{#if loggedIn}}
        <a href="create-comment">Leave A comment!</a>
        <button id="logout">Logout</button>
        {{else}}
        <a href="/login">Login</a>
        {{/if}} 
</div>